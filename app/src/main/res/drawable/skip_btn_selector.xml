<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#7000"/>
            <corners android:radius="32dp"/>
            <size android:width="20dp" android:height="10dp"/>
            <padding android:top="8dp" android:right="16dp" android:left="16dp" android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4000"/>
            <corners android:radius="32dp"/>
            <size android:height="10dp" android:width="20dp"/>
            <padding android:top="8dp" android:right="16dp" android:left="16dp" android:bottom="8dp"/>
        </shape>
    </item>
</selector>