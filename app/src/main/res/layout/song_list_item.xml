<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="56dp"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TitleText16"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/loading"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dl_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/list_icn_dld_ok" />

            <ImageView
                android:id="@+id/quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/list_icn_hq_sml" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/loading"
                android:textAppearance="@style/SubText10" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/more"
        android:contentDescription="@null"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:src="@drawable/list_icn_more"
        android:scaleType="centerInside"
        android:background="@drawable/list_item_click_bg"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>