<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/ad_cover_vp"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <LinearLayout
                android:id="@+id/llDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="16dp"
                android:orientation="horizontal" />
        </RelativeLayout>

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_centerHorizontal="true"
                   android:id="@+id/iv_fm_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:contentDescription="@null"
                   android:src="@drawable/recommend_icn_fm_selector" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/iv_fm_btn"
                   android:text="@string/my_fm"
                   android:textAppearance="@style/TitleText12"
                   android:layout_marginTop="8dp"
                   android:layout_centerHorizontal="true"/>
           </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/daily_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/date_today"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/DailyText"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/iv_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@null"
                        android:src="@drawable/recommend_icn_daily_selector" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/daily_layout"
                    android:text="@string/str_daily"
                    android:textAppearance="@style/TitleText12"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/recommend_icn_playlist_selector" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_pl"
                    android:text="@string/str_pl"
                    android:textAppearance="@style/TitleText12"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_upbill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/recommend_icn_upbill_selector" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_upbill"
                    android:text="@string/str_upbill"
                    android:textAppearance="@style/TitleText12"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@drawable/divider"/>
        <RelativeLayout
            android:id="@+id/recom_pl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/title_layout_comm_pl"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<ImageView-->
                    <!--android:contentDescription="@null"-->
                    <!--android:layout_width="4dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@color/theme_primary_color" />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TitleText16"
                    android:text="@string/recomm_pl"
                    android:drawableRight="@drawable/list_icn_arr_right"
                    android:drawableEnd="@drawable/recommend_icn_arr"
                    android:drawableLeft="@drawable/red_edge"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/red_edge" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/title_layout_comm_pl"
                android:id="@+id/recomm_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/new_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/title_layout_new_music"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<ImageView-->
                <!--android:contentDescription="@null"-->
                <!--android:layout_width="4dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/theme_primary_color" />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TitleText16"
                    android:text="@string/comm_new_music"
                    android:drawableRight="@drawable/list_icn_arr_right"
                    android:drawableEnd="@drawable/recommend_icn_arr"
                    android:drawableLeft="@drawable/red_edge"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/red_edge" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>