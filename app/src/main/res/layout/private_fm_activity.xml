<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:contentDescription="@null"
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.bilibili.magicasakura.widgets.TintToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@android:color/transparent">

        </com.bilibili.magicasakura.widgets.TintToolbar>
        <ImageSwitcher
            android:id="@+id/imgSwitcher"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp">

        </ImageSwitcher>
        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:visibility="invisible"
                android:maxWidth="300dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="没那么简单"/>

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/artist"
                android:maxWidth="300dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="@color/subText"
                android:gravity="center"
                android:visibility="invisible"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="孙燕姿"/>
            <include layout="@layout/seek_layout"/>
            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:columnCount="5"
                app:orientation="horizontal">

                <ImageView
                    android:contentDescription="@null"
                    app:layout_gravity="center_vertical"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/play_rdi_icn_del"/>
                <ImageView
                    android:contentDescription="@null"
                    app:layout_gravity="center_vertical"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/play_rdi_icn_love"/>

                <ImageView
                    android:contentDescription="@null"
                    app:layout_gravity="center_vertical"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/play_rdi_btn_play"/>
                <ImageView
                    android:id="@+id/play_next"
                    android:contentDescription="@null"
                    app:layout_gravity="center_vertical"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/play_rdi_icn_next_selector"/>
                <ImageView
                    android:contentDescription="@null"
                    app:layout_gravity="center_vertical"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/play_icn_cmt_number"/>

            </android.support.v7.widget.GridLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>